generator client {
  provider = "prisma-client-js"
  output   = "../prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  User
  Admin
}

enum StatusEnum {
  Pending
  Disabled
  Active
  Cancelled
  Failed
  Completed
  Expired
  Progress
}

enum PaymentStatus {
  Active
  Trialing
  PastDue
  Unpaid
  Canceled
  Incomplete
  Expired
  Paused
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  password      String?
  role          RoleEnum      @default(User) // Use the Role enum
  oauth         Boolean       @default(false)
  oauthProvider String?
  status        StatusEnum    @default(Pending)
  phone         String?
  address       String?
  imageUrl      String?
  token         Token?
  // Add an index on the oauthProvider field
  transactions  Transaction[]
  createdAt     DateTime      @default(now()) // Automatically set to the current date and time
  updatedAt     DateTime      @updatedAt

  // Add an index on the planId field
  @@index([oauthProvider])
}

model Token {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  user         User?  @relation(fields: [id], references: [id])
}

model Verification {
  id      Int      @id @default(autoincrement())
  userId  Int      @unique
  code    String
  expires DateTime
}

model Transaction {
  id        Int           @id @default(autoincrement())
  userId    Int?
  email     String
  name      String
  meterName String
  ref       String
  amount    Int
  tax       Int?
  disco     String
  dept      String?
  token     String
  status    PaymentStatus
  method    String
  receipt   String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User?         @relation(fields: [userId], references: [id])
}

model ContactUs {
  id        Int      @id @default(autoincrement())
  subject   String
  firstName String
  lastName  String
  email     String
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
